<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/topFrag"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_gravity="clip_vertical"
        android:layout_height="0dp"
        android:name="com.example.project3.DropDownFrag"
        tools:layout="@layout/fragment_drop_down"></androidx.fragment.app.FragmentContainerView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bottomFrag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.example.project3.infoText"
        android:layout_weight="10"
        tools:layout="@layout/fragment_info_text"></androidx.fragment.app.FragmentContainerView>


</LinearLayout>